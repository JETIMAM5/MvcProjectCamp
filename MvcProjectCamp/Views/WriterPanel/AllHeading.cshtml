@using EntityLayer.Concrete
@model  List<Heading>
@{
    ViewBag.Title = "AllHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{string color = ""; }

<br />

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Projects</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Heading Name
                            </th>
                            <th style="width: 15%">
                                Writer
                            </th>
                            <th style="width: 10%">
                                Status
                            </th>
                            <th style="width: 8%" class="text-center">
                                Category
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            switch (item.Category.CategoryName)
                            {
                                case "Theatre":
                                    color = "badge badge-warning";
                                    break;
                                case "Sport":
                                    color = "badge badge-success";
                                    break;
                                case "Education":
                                    color = "badge badge-secondary";
                                    break;
                                case "Book":
                                    color = "badge badge-primary";
                                    break;
                                case "Serie":
                                    color = "badge badge-dark";
                                    break;
                                default:
                                    color = "";
                                    break;
                            }
                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4/dist/img/avatar.png">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    @{
                                        string state = "";
                                        string colorr = "";
                                        if (item.HeadingStatus == true)
                                        {
                                            state = "Active";
                                            colorr = "text-info";
                                        }
                                        else
                                        {
                                            state = "Passive";
                                            colorr = "text-danger";
                                        }
                                    }
                                    <p class="@colorr">@state</p>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Default/Headings/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Contents
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanelContent/AddContent/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Write About This Topic
                                    </a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>



